{
    "name": "scss.toolkit",
    "displayName": "SCSS Toolkit",
    "description": "Autocomplete and refactoring support for SCSS",
    "version": "0.0.1",
    "publisher": "Alex",
    "engines": {
        "vscode": "^1.28.0"
    },
    "contributes": {
        "configuration": {
            "properties": {
                "scss.toolkit.log.warning": {
                    "type": "boolean",
                    "default": false,
                    "description": "Allows display of warnings."
                },
                "scss.toolkit.log.error": {
                    "type": "boolean",
                    "default": false,
                    "description": "Allows display of errors."
                },
                "scss.toolkit.log.info": {
                    "type": "boolean",
                    "default": true,
                    "description": "Allows display of info."
                },
                "scss.toolkit.maxNumberOfProblems": {
                    "scope": "resource",
                    "type": "number",
                    "default": 100,
                    "description": "Controls the maximum number of problems produced by the server."
                },
                "scss.toolkit.trace.server": {
                    "scope": "window",
                    "type": "string",
                    "enum": [
                        "off",
                        "messages",
                        "verbose"
                    ],
                    "default": "off",
                    "description": "Traces the communication between VS Code and the language server."
                }
            }
        }
    },
    "categories": [
        "Programming Languages",
        "Language Packs"
    ],
    "activationEvents": [
        "onLanguage:scss"
    ],
    "keywords": [
        "SCSS",
        "SCSS Autocomplete",
        "SCSS Intellisense",
        "autocompletion",
        "intellisense"
    ],
    "main": "./out/client/client.startup",
    "preview": true,
    "scripts": {
        "vscode:prepublish": "npm run compile",
        "compile": "tsc -p ./",
        "watch": "tsc -watch -p ./",
        "postinstall": "node ./node_modules/vscode/bin/install",
        "test": "npm run compile && node ./node_modules/vscode/bin/test"
    },
    "repository": {
        "type": "git",
        "url": "git@github.com:aleczandru1989/vscode-scss-toolkit.git"
    },
    "dependencies": {
        "readdir-enhanced": "2.2.2",
        "vscode-css-languageservice": "3.0.12",
        "vscode-languageclient": "5.1.1",
        "vscode-languageserver": "5.1.0"
    },
    "devDependencies": {
        "@types/readdir-enhanced": "^2.2.0",
        "typescript": "^2.6.1",
        "vscode": "^1.1.21",
        "tslint": "^5.11.0",
        "@types/node": "^10.12.2",
        "@types/mocha": "^2.2.42"
    }
}